<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>netbliz-webapp</display-name>
	<servlet>
		<servlet-name>Netbliz</servlet-name>
		<display-name>Netbliz</display-name>
		<description></description>
		<servlet-class>com.fssa.netbliz.Netbliz</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>registration</servlet-name>
		<display-name>registration</display-name>
		<description></description>
		<servlet-class>com.fssa.netbliz.registration</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>registration1</servlet-name>
		<display-name>registration1</display-name>
		<description></description>
		<servlet-class>com.fssa.netbliz.registration</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Logout</servlet-name>
		<display-name>Logout</display-name>
		<description></description>
		<servlet-class>com.fssa.netbliz.Logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BalanceDetails</servlet-name>
		<display-name>BalanceDetails</display-name>
		<description></description>
		<servlet-class>com.fssa.netbliz.BalanceDetails</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Netbliz</servlet-name>
		<url-pattern>/Netbliz</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>registration1</servlet-name>
		<url-pattern>/registration1</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BalanceDetails</servlet-name>
		<url-pattern>/BalanceDetails</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>

	<error-page>
		<!-- <exception-type>java.lang.Exception</exception-type> For handling 
			exceptions -->
		<error-code>404</error-code> <!-- HTTP Error code Page Not found -->
		<location>/error.jsp</location>
	</error-page>
	<error-page>
		<!-- <exception-type>java.lang.Exception</exception-type> For handling 
			exceptions -->
		<error-code>500</error-code> <!-- HTTP Error code Page Not found -->
		<location>/error.jsp</location>
	</error-page>
	
</web-app>
